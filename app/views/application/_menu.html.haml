.dropdown-wrap.boxed-velvet.topmenu
  %ul{class: ['dropdown', 'inner', 'clearfix', 'gradient']}
    %li{class: ['menu-level-0', 'first']}
      %a{href: '/', class: ["gradient #{'active' if current_page?(root_path)}"]}
        %span Home
    %li{class: ['menu-level-0', 'parent']}
      %a{href: '/about', class: 'gradient'}
        %span About Us
      %ul.submenu-1
        %li{class: ['menu-level-1', 'first']}
          %a{href: '/about', class: ["gradient #{'active' if current_page?(controller: 'static_pages', action: 'about')}"]}
            %span About project
        %li{class: ['menu-level-1', 'last']}
          %a{href: '/contacts', class: ["gradient #{'active' if current_page?(controller: 'static_pages', action: 'contacts')}"]}
            %span Contacts
    - if true
      %li{class: ['menu-level-0', 'parent']}
        %a{href: '#', class: 'gradient'}
          %sup{class: ['note', 'gradient']} 3
          %span Account
        %ul.submenu-1
          %li{class: ['menu-level-1', 'first']}
            %a{href: '#', class: 'gradient'}
              %span Users
          %li{class: 'menu-level-1'}
            %a{href: '#', class: 'gradient'}
              %span My profile
          %li{class: ['menu-level-1', 'parent', 'last']}
            %a{href: '#', class: 'gradient'}
              %sup{class: ['note', 'gradient']} 3 
              %span Assign for me
            %ul.submenu-2
              %li{class: ['menu-level-2', 'first']}
                %a{href: '#', class: 'gradient'}
                  %sup{class: ['note', 'gradient']} 1 
                  %span Waiting for Customer
              %li{class: ['menu-level-2', 'last']}
                %a{href: '#', class: 'gradient'}
                  %sup{class: ['note', 'gradient']} 2
                  %span On hold
      %li{class: ['menu-level-0', 'parent']}
        %a{href: '#', class: 'gradient'}
          %sup{class: ['note', 'gradient']} 3
          %span Tickets
        %ul.submenu-1
          %li{class: ['menu-level-1', 'first']}
            %a{href: '#', class: 'gradient'} 
              %span All tickets
          %li{class: ['menu-level-1', 'last']}
            %a{href: '#', class: 'gradient'}
              %sup{class: ['note', 'gradient']} 3 
              %span Wait for Staff Response
      %li{class: ['menu-level-0', 'last']}
        %a{href: '#', class: 'gradient'}
          %span Log off
    - else
      %li{class: 'menu-level-0'}
        %a{href: '#', class: 'gradient'}
          %span Sign Up
      %li{class: ['menu-level-0', 'last']}
        %a{href: '#', class: 'gradient'}
          %span Log on
